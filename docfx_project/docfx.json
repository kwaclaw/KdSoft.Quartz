{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "**/KdSoft.Quartz.AspNet.csproj",
                        "**/KdSoft.Quartz.csproj",
                        "**/KdSoft.Quartz.Jobs.csproj",
                        "**/KdSoft.Quartz.Shared.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**",
                        "_site/**"
                    ],
                    "src": "../"
                },
                {
                    "files": [ "src/Quartz.dll" ]
                }
            ],
            "dest": "api",
            "properties": {
                /* Workaround to trick DocFX into generating metadata for projects using multiple target frameworks!  */
                "TargetFramework": "net462"
            }
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default"
        ],
        "postProcessors": [],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": true
    }
}